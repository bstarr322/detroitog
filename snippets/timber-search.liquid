<div id="SearchDrawer" class="drawer drawer--search">
  <div class="drawer__header">
    <div class="table-cell drawer__header__left">
      <span class="drawer__close js-drawer-close">
          <img src="{{'close-cart.svg' | asset_url}}">
      </span>
    </div>
    <div class="table-cell drawer__header__right">
      <form action="/search" id="timber_search_form" class="timber_search_form search">
        <input type="text" placeholder="Search" name="q" value="{{ search.terms | escape }}" class="timber_search_form--text" id="timber_search_form--text"  />
        <a class="search_form--clear" href="#"></a>
      </form>
    </div>
  </div>
  <div class="search--content">
    <ul class="search-module-content">
    </ul>
  </div>
  <div id="SearchContainer"></div>
</div>